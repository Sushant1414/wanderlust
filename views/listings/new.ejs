<% layout("/layouts/boilerplate") %>

  <body>
    <div class="row mt-3">
      <div class="col-8 offset-2">
        <br>
        <h3>Create a New Listing</h3>
        <form method="POST" action="/listings" class="needs-validation" novalidate>
          <div class="mb-3">
            <lable for="title" class="form-lable">Title<lable>
                <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control"
                  required />
          </div>
          <div class="valid-feedback">Title looks good!</div>

          <div class="mb-3">
            <lable for="description" class="form-lable"> Description <lable></lable>
              <!-- <textarea name="listing[description]" class="form-control" type="text" required > </textarea> -->
               <input type="text" name="listing[description]" class="form-control"  required>
               <div class="invalid-feedback">Please enter a short description</div>
          </div>

          <div class="mb-3">
            <lable for="image" class="form-lable">Image Link<lable>
                <input name="listing[image]" placeholder="enter image URL/Link" type="text" class="form-control" />
                
          </div>

          <div class="row">
            <div class="mb-3 col-md-4">
              <lable for="price" class="form-lable">Price<lable></lable>
                <input name="listing[price]" placeholder="1200"  class="form-control" required />
                <div class="invalid-feedback">Price should be valid</div>
            </div>

            <div class="mb-3 col-md-8">
              <lable for="country" class="form-lable">Country<lable></lable>
                <input name="listing[country]" placeholder="India" type="text" class="form-control" required />
                <div class="invalid-feedback">Country name should be valid</div>
            </div>
            <br>
          </div>

          <div class="mb-3">
            <lable for="location" class="form-lable">Location<lable></lable>
              <input name="listing[location]" placeholder="jaipur,Rajasthan" type="text" class="form-control" required />
              <div class="invalid-feedback">Location should be valid</div>
          </div>


          <button class="btn btn-dark add-btn mt-3">Add</button>

        </form>
  </body>
  </div>
  </div>